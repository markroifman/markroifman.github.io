<html>

<head> 
<link rel="stylesheet" href="style1.css">
<script>
    function func1() {
      n = Number(document.getElementById("n_f1_znach").value);
      i=1;
      var S=0;
      while (i <= n) {
        S=1/i+S;
    
        document.getElementById("otvet1").innerHTML = document.getElementById("otvet1").innerHTML + i +" "+S+"<br>";
        i++ ;
      }
    }
    function func2() {
      n = Number(document.getElementById("n_f2_znach").value);
      i=1;
      var S=0;
      var b=1
      while (i <= n) {
        S=1/i*b+S;
    
        document.getElementById("otvet1").innerHTML = document.getElementById("otvet1").innerHTML + i +" "+S+"<br>";
        i++ 
        b=b*-1;
      }
    }
     function func3() {
      n = Number(document.getElementById("n_f3_znach").value);
      var b=3
      var i=1
      var S=1;
      while (i <= 8) {
        S=1/b+S;
        document.getElementById("otvet1").innerHTML = document.getElementById("otvet1").innerHTML + i +" "+S+"<br>";
        i++  
        b=b*3;
      }
    }
    </script>
</head>

<body>


  <h1>5.31</h1> 5.38б
  <input type="text" value="10" id="n_f1_znach">
  <a href="#" onclick="func1()" class="circ-button">I</a>5.38а
  <input type="text" value="10" id="n_f2_znach">
  <a href="#" onclick="func2()" class="circ-button">II</a><br> 5.34
  <input type="text" value="10" id="n_f3_znach">
  <a href="#" onclick="func3()" class="circ-button">III</a>
  <div id="otvet1"></div>
  </body>
</html>
